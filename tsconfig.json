{
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,

    "paths": {
      "/@theme/*": ["src/.vitepress/theme/*"]
    },

    "types": ["@types/node"],
  },

  "include": [
    "src/**/*",
    "src/.vitepress/**/*",
    "types"
  ],

  "exclude": ["node_modules"]
}
